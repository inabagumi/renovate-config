{
  "author": "Haneru Developers",
  "bugs": {
    "url": "https://github.com/inabagumi/renovate-config/issues"
  },
  "description": "Inabagumi presets for Renovate",
  "devDependencies": {
    "renovate": "^19.175.2",
    "standard-version": "^7.1.0"
  },
  "files": [],
  "homepage": "https://github.com/inabagumi/renovate-config",
  "license": "MIT",
  "name": "@inabagumi/renovate-config",
  "renovate-config": {
    "default": {
      "extends": [
        "config:base",
        ":semanticCommitTypeAll(chore)"
      ],
      "lockFileMaintenance": {
        "enabled": true
      },
      "packageRules": [
        {
          "depTypeList": [
            "engines",
            "peerDependencies"
          ],
          "rangeStrategy": "auto"
        },
        {
          "description": "Group packages from nextjs monorepo together",
          "groupName": "nextjs monorepo",
          "packagePatterns": [
            "^@next/"
          ],
          "sourceUrlPrefixes": [
            "https://github.com/zeit/next.js"
          ]
        }
      ],
      "postUpdateOptions": [
        "gomodTidy"
      ],
      "rangeStrategy": "bump"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/inabagumi/renovate-config.git"
  },
  "resolutions": {
    "minimist": "^1.2.5"
  },
  "scripts": {
    "release": "standard-version",
    "test": "renovate-config-validator"
  },
  "version": "1.5.0"
}
